<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="Fretboard_Trainer.Views.TimerPracPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name = "notetoplay"
                   Text="{Binding NoteToPlay}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Header" />
            <Label x:Name = "stringtoplay"
                Text="{Binding StringToPlay}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Title" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>