<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fretboard_Trainer.Views.AddInstrumentPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Instrument Name" />
            <Label Text="# Of Strings" />
            <Stepper x:Name="stepper" Value="6" />
            <Label Text="{Binding Source={x:Reference stepper}, Path=Value}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>